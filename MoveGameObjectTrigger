using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class T90move : MonoBehaviour
{
    [SerializeField] private Transform target;
    [SerializeField] private float t;
    [SerializeField] private float speed;
    private bool enteredTrigger = false;

    private void OnTriggerEnter(Collider other)
    {
        enteredTrigger = true;
        Debug.Log("Trigger activated");
    }

    private void FixedUpdate()
    { 
        if (enteredTrigger)
        {
            Debug.Log("Movement activated");

            //Teleport
            //       transform.position = target.position;

            //Lerp (smooth motion, non-constant speed)
            //       Vector3 a = transform.position;
            //       Vector3 b = target.position;
            //       transform.position = Vector3.Lerp(a, b, t);

            //Move towards (constant speed, non-smooth)
                   Vector3 a = transform.position;
                   Vector3 b = target.position;
                   transform.position = Vector3.MoveTowards(a, b, speed);

     //Lerp & Move towards mix - best visuals
     //       Vector3 a = transform.position;
     //       Vector3 b = target.position;
     //       transform.position = Vector3.MoveTowards(a, Vector3.Lerp(a, b, t), speed);
     
            enteredTrigger = false;
        }
    }

}
//x 18, y 4.72, z 0.69
